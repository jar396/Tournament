public class Equipo {

    private String nombre;
    private int goles;
    private int puntos_Acumulados;

    public Equipo(String nombre, boolean caso) {
        this.nombre = nombre;
        if(caso)
            goles = generarGoles();
        else
            goles = -1;
        this.puntos_Acumulados = 0;
    }

    public int generarGoles() {
        Random gA = new Random();
        int gol = gA.nextInt();
        if (gol < 0) {
            gol = gol * (-1);
        }
        gol = gol % 8;
        goles = gol;
        return gol;
    }

    public String getNombre() {
        return nombre;
    }

    public int getGoles() {
        return goles;
    }

    public int getPuntosAcumulados(){
        return puntos_Acumulados;
    }
    
    public void setPuntosAcumulado(int punto){
        this.puntos_Acumulados = this.puntos_Acumulados + punto;
    }
    
    @Override
    public String toString() {
        if (goles == -1) {
            return "Equipo Campeon: " + nombre;
        } else {
            return nombre + "   Goles: " + goles + "    Puntos: " + puntos_Acumulados;
        }
    }

}
